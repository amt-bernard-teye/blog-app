generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  READER
  BLOGGER
}

enum VerificationStatus {
  PENDING
  VERIFIED
  SUSPENDED
}

model User {
  id String @id
  name String
  email String
  password String
  role Role
  status VerificationStatus @default(PENDING)
  image String?

  @@map("users")
}

enum UsageStatus {
  ACTIVE
  HIDDEN
}

model Category {
  id Int @id @default(autoincrement())
  name String
  status UsageStatus @default(ACTIVE)

  @@map("categories")
}